  .col-sm-6 = f.input :country, collection: Garage.countries(current_user)
.col-sm-6 = f.input :phone, as: :tel
.col-sm-6 = f.input :mobile, as: :tel
.col-sm-6 = f.input :fax, as: :tel
.col-sm-6 = f.input :tax_id, as: :string
.col-sm-6 = f.input :logo, wrapper: :vertical_file_input, hint: t('click to assign an image to your garage')
.col-sm-6 = f.input :website, as: :string