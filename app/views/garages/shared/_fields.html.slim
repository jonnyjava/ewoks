.col-sm-6 = f.input :name, as: :string
.col-sm-6 = f.input :email, as: :email
.col-sm-3 = f.input :street, as: :string
.col-sm-3 = f.input :zip, as: :string
.col-sm-3 = f.input :province, as: :string
.col-sm-3 = f.input :city, as: :string
